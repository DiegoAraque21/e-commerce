<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <%- include("../includes/flash-messages")%>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                    <% let i = 1%>
                    <div class="container">
                        <div class="row gy-3">
                            <% orders.forEach(order => { %>
                                <div class="col-sm-3">
                                    <div class="card text-white bg-success mt-3 h-100">
                                        <div class="card-header">Order - #<%= i %></div>
                                        <div class="card-body">
                                          <div class="card-text">
                                            <h5>Total: <%= order.total.toFixed(2) %></h5>
                                          </div>
                                            <a class="btn btn-primary" href="/orders/<%= order._id %>">Details</a>
                                        </div>
                                      </div>
                                </div>
                                <% i++ %>
                            <% }); %>
                        </div>
                    </div>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>