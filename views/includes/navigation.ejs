<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">E-Shop</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarScroll"
      aria-controls="navbarScroll"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarScroll">
      <ul
        class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll"
        style="--bs-scroll-height: 100px"
      >
        <li class="nav-item">
          <a class="nav-link <%= path === '/' ? 'active' : '' %>" href="/"
            >Shop</a
          >
        </li>
        <% if (isAuthenticated) { %>
        <li class="nav-item">
          <a
            class="nav-link <%= path === '/cart' ? 'active' : '' %>"
            href="/cart"
            >Cart</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= path === '/orders' ? 'active' : '' %>"
            href="/orders"
            tabindex="-1"
            >Orders</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= path === '/admin/add-product' ? 'active' : '' %>"
            href="/admin/add-product"
            tabindex="-1"
            >Add Product</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= path === '/admin/products' ? 'active' : '' %>"
            href="/admin/products"
            tabindex="-1"
            >Your Products</a
          >
        </li>
        <% } if (!isAuthenticated) { %>
        <li class="nav-item">
          <a
            class="nav-link <%= path === '/login' ? 'active' : '' %>"
            href="/login"
            tabindex="-1"
            >Login</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= path === '/signup' ? 'active' : '' %>"
            href="/signup"
            tabindex="-1"
            >Signup</a
          >
        </li>
      </ul>
      <% } else { %>
      <form class="form-inline my-2 my-lg-0" action="/logout" method="post">
        <input
          class="form-control mr-sm-2"
          type="hidden"
          name="_csrf"
          value="<%= csrfToken %>"
        />
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
          Logout
        </button>
      </form>
      <% } %>
    </div>
  </div>
</nav>
