<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(message) {%>
            <% if(type === "failure") { %>
              <%- include("../includes/flash-messages.ejs", {failureMessage: message}) %>
            <% } else { %>
              <%- include("../includes/flash-messages.ejs", {successMessage: message}) %> 
            <% } %>
          <% } %>
        <div class="container">
            <form class="inner_container" action="/new-password" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <input type="hidden" name="userId" value="<%= userId %>" />
                <input type="hidden" name="passwordToken" value="<%= passwordToken %>" />
                 <!-- TITLE -->
                <h1 class="text-dark text-center mb-3">Reset Password</h1>
                <div class="col-md-12">
                    <label for="password">Pasword</label>
                    <input type="password" name="password" id="password" class="form-control">
                </div>
                <div>
                    <button class="btn btn-outline-success mt-4 w-100" type="submit">Update Password</button>
                </div>
            </form>
        </div>
    </main>
<%- include('../includes/end.ejs') %>